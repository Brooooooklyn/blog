{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.4.4"
  },
  "scripts": {
    "build": "shx rm -rf public && npm run copy_files && hexo generate && gulp",
    "copy_files": "shx cp _config.yml ./themes/apollo/_config.yml && shx cp favicon.png ./themes/apollo/source/favicon.png",
    "deploy": "sneaky d release",
    "server": "NODE_ENV=production hexo server",
    "start": "pm2 start pm2/app.json"
  },
  "dependencies": {
    "hexo": "^3.4.4",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-sitemap": "^1.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-jade": "^0.4.1",
    "hexo-renderer-marked": "^0.3.2",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.1"
  },
  "devDependencies": {
    "config": "^1.29.2",
    "cos-nodejs-sdk-v5": "^2.2.6",
    "gulp": "^3.9.1",
    "gulp-replace": "^0.6.1",
    "shx": "^0.2.2",
    "sneaky": "^2.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "sneaky"
    ]
  }
}
